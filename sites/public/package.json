{
  "name": "@bloom-housing/public",
  "version": "1.0.3",
  "description": "Public web app reference implementation for the Bloom affordable housing system",
  "main": "index.js",
  "license": "Apache-2.0",
  "private": true,
  "scripts": {
    "dev": "NODE_OPTIONS='--inspect=9230' next -p ${NEXTJS_PORT:-3000}",
    "build": "next build",
    "export": "next export",
    "start": "next start -p ${NEXTJS_PORT:-3000}",
    "dev:listings": "cd ../../backend/core && yarn dev",
    "dev:server-wait": "wait-on \"http-get://localhost:${PORT:-3100}/listings\" && yarn dev",
    "dev:all": "concurrently \"yarn dev:listings\" \"yarn dev:server-wait\""
  },
  "dependencies": {
    "@bloom-housing/ui-components": "^1.0.3",
    "@mdx-js/loader": "1.6.18",
    "@next/mdx": "^10.1.0",
    "axios": "^0.21.1",
    "dotenv": "^8.2.0",
    "moment": "^2.29.1",
    "nanoid": "^3.1.12",
    "next": "^10.1.0",
    "next-plugin-custom-babel-config": "^1.0.2",
    "node-polyglot": "^2.4.0",
    "node-sass": "^4.14.1",
    "openapi-client-axios": "^3.6.2",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "react-hook-form": "^6.9.2",
    "swr": "^0.5.5"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^10.1.0",
    "@types/markdown-to-jsx": "^6.11.2",
    "@types/node": "^12.12.67",
    "@types/react": "^16.9.52",
    "concurrently": "^5.3.0",
    "js-levenshtein": "^1.1.6",
    "next-transpile-modules": "^4.1.0",
    "sass-loader": "^10.0.3",
    "typescript": "^3.9.7",
    "webpack": "^4.44.2"
  }
}
